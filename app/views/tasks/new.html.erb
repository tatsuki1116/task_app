<div class="container">
	<div class="row">
		<div class="center">
			<h3>New Task</h3>
			<%= form_for @task do |f| %>
			  <%= render 'layouts/error_messages', task: @task %>
				<p><%= f.label :task_name %></p>
				<p><%= f.text_field :task_name %></p>
				<p><%= f.label :details %></p>
				<p><%= f.text_area :details, :placeholder => "max is 255 characters" %></p>
				<p><%= f.label :deadline_at %></p>
				<p><%= f.date_select :deadline_at %></p>
				<%= f.submit "タスク作成" %>
			<% end %>
		</div>
	</div>
</div>
