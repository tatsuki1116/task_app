<table>
	<thead>
		<tr>
			<th>タスク</th>
			<th>詳細</th>
		</tr>
	</thead>
	<% @tasks.each do |task| %>
	<tbody>
		<tr>
			<td><%= task.task_name %></td>
			<td><%= task.details %></td>
			<td><%= link_to 'show', task_path(task.id) %></td>
			<td><%= link_to 'edit', edit_task_path(task.id) %></td>
			<td><%= link_to 'destory', task_path(task.id), method: :delete %></td>
		</tr>
	</tbody>
	<% end %>
</table>
<h3><%= link_to "New", new_task_path %></h3>
